{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015.promise",
      "dom"
    ],
    "inlineSourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  }
}
